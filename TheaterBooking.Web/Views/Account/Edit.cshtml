@model TheaterBooking.Web.ViewModels.CreateUserModel
@{
    ViewBag.Title = "ویرایش کاربر";
}
<h2>
    ویرایش کاربر : @Model.UserName</h2>
<div>
    @using (Html.BeginForm("Edit"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(o => o.UserName)
        @Html.ValidationSummary(true)
        <div class="editor-label">
            نام کاربری
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.UserName, new { Disabled = "Disabled", Class = "ReadonlyInput" })
        </div>  
        <div class="editor-label">
            پست الکترونیک
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Email)
        </div>     
        <div class="editor-label">
            دارای سطح دسترسی ادمین ؟
        </div>
        <div class="editor-field">
            <div class="unclearable">
                @Html.CheckBoxFor(m => m.IsAdmin)
            </div>
        </div> 
              
        <ul class="controlButtonsSet">
            <li><a href="javascript:void(0)" id="lnkEdit">تایید</a></li>
            <li>|</li>
            <li><a href="@Url.Action("Manage")" id="lnkReturn">بازگشت</a></li>
        </ul>  
    }
</div>
<script type="text/javascript">
    $(function () {
        $("#lnkEdit").click(function () {
            $($(this).parents("form")[0]).submit();
        });

        $("#lnkEdit").Iconize("ui-icon-check");
        $("#lnkReturn").Iconize("ui-icon-arrowreturnthick-1-w");

    });
</script>
